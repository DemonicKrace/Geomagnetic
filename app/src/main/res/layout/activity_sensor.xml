<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.demonickrace.geomagneticlocation.SensorActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        app:srcCompat="@drawable/compass"
        android:id="@+id/compass"
        android:layout_gravity="center_horizontal"
        android:layout_height="200dp" />

    <TextView
        android:text="compassDegree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/compassDegree"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".33">

        <TextView
            android:text="m_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_x"
            android:layout_weight=".33" />

        <TextView
            android:text="m_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_y"
            android:layout_weight=".33" />

        <TextView
            android:text="m_z"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_z"
            android:layout_weight=".33" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".33">

        <TextView
            android:text="m_un_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_un_x"
            android:layout_weight=".33" />

        <TextView
            android:text="m_un_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_un_y"
            android:layout_weight=".33" />

        <TextView
            android:text="m_un_z"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_un_z"
            android:layout_weight=".33" />

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".33">

        <TextView
            android:text="m_un_bias_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_un_bias_x"
            android:layout_weight=".33" />

        <TextView
            android:text="m_un_bias_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_un_bias_y"
            android:layout_weight=".33" />

        <TextView
            android:text="m_un_bias_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_un_bias_z"
            android:layout_weight=".33" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".33">

        <TextView
            android:text="gx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gx"
            android:layout_weight=".33" />

        <TextView
            android:text="gy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gy"
            android:layout_weight=".33" />

        <TextView
            android:text="gz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gz"
            android:layout_weight=".33" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/position"
            android:layout_weight=".33" />

        <Button
            android:text="開始記錄"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/startBtn"
            android:layout_weight=".33"
            android:onClick="onClick" />

        <Button
            android:text="儲存記錄"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/saveBtn"
            android:layout_weight=".33"
            android:onClick="onClick" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:text="filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/filename"
            android:layout_weight=".33" />

        <CheckBox
            android:text="Uncalibrated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/uncalibrated"
            android:layout_weight=".33"/>

        <Button
            android:text="暫停紀錄"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stopBtn"
            android:layout_weight=".33"
            android:onClick="onClick"
            android:visibility="invisible" />


    </LinearLayout>

</LinearLayout>
